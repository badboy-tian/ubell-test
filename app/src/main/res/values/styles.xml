    <style name="CameraProgress">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">#80101010</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="CameraText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">#801d1d1d</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="CameraButtonPanel">
        <item name="android:background">#801d1d1d</item>
    </style>

    <style name="CameraButton">
        <item name="android:layout_width">26dip</item>
        <item name="android:layout_height">22dip</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="mySwitchStyle">
        <item name="track">@drawable/switch_track</item>
        <item name="thumb">@drawable/switch_thumb</item>
        <item name="switchTextAppearanceAttrib">@style/mySwitchTextAppearance</item>
        <item name="textOn">ON</item>
        <item name="textOff">OFF</item>
        <item name="pushStyle">false</item>
        <item name="textOnThumb">true</item>
        <item name="thumbExtraMovement">0dp</item>
        <item name="thumbTextPadding">6dp</item>
        <item name="trackTextPadding">6dp</item>
        <item name="switchMinWidth">69dp</item>
        <item name="switchMinHeight">30dp</item>
        <item name="switchPadding">6dp</item>
    </style>

    <style name="mySwitchTextAppearance">
        <item name="textColor">#FFeeFFee</item>
        <item name="textColorHighlight">#FFeeFFee</item>
        <item name="textColorHint">#FFeeFFee</item>
        <item name="textColorLink">#FFeeFFee</item>
        <item name="textSize">16sp</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="date_and_time_picker_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="editTextStyle">
        <item name="textSize">16sp</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="ProgressBar_upload" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">20dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar_upload</item>
    </style>

    <style name="ButtonBar"></style>

    <style name="ButtonBarButton"></style>

    <!-- zhaofhadd -->
    <style name="LoginButton">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_gray</item>
    </style>

    <style name="LoginButton.Blue" parent="@style/LoginButton">
        <item name="android:background">@drawable/btn_blue</item>
    </style>

    <style name="LoginButton.Red" parent="@style/LoginButton">
        <item name="android:background">@drawable/btn_red</item>
    </style>

    <style name="TextShadowed" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="TextShadowedBold" parent="@style/TextShadowed">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffcfcfcf</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="Title" parent="@style/TextShadowedBold">
        <item name="android:textSize">20.0sp</item>
    </style>

    <style name="LeftPaneLabel" parent="@style/TextShadowed">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="textColor">?android:textColorPrimary</item>
        <item name="textSize">16.0sp</item>
        <item name="textColorHighlight">?android:textColorHighlight</item>
        <item name="textColorHint">?android:textColorHint</item>
        <item name="textColorLink">?android:textColorLink</item>
    </style>

    <style name="switch_light">
        <item name="thumb">@drawable/switch_inner_holo_light</item>
        <item name="track">@drawable/switch_track_holo_light</item>
        <item name="textOn">@string/textOn</item>
        <item name="textOff">@string/textOff</item>
        <item name="thumbTextPadding">12.0dip</item>
        <item name="switchTextAppearance">@style/TextAppearance</item>
        <item name="switchMinWidth">96.0dip</item>
        <item name="switchPadding">16.0dip</item>
    </style>

    <style name="DarkButton" parent="@style/ButtonShadowed">
        <item name="android:background">@drawable/btn_dark</item>
    </style>

    <style name="ButtonShadowed" parent="@android:style/Widget.Button">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="HoloAlertDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:spinnerItemStyle">@style/HoloSpinnerItem</item>
    </style>

    <style name="HoloSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/HoloTextAppearanceSpinnerItem</item>
    </style>

    <style name="HoloTextAppearanceSpinnerItem" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="Text.Light" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="Settings.Title" parent="@style/Text.Light">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="Button.Light" parent="@style/Text.Light">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/dark_gray_text_color</item>
        <item name="android:background">@drawable/btn_light</item>
    </style>

    <style name="myTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Dialog -->
    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item> <!-- title -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
    <style name="MainActivitynoAnimation"  parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
</resources>